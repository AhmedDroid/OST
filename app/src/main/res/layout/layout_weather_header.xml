<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/headerWeatherIconImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:text="Amman"
        android:textColor="@android:color/primary_text_light"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/headerWeatherIconImageView"
        app:layout_constraintTop_toTopOf="@+id/headerWeatherIconImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerWeatherStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Haze"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/headerCityTextView"
        app:layout_constraintTop_toBottomOf="@+id/headerCityTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>